<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical" android:id="@+id/linearLayout"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintEnd_toStartOf="parent"
                  app:layout_constraintBottom_toTopOf="parent">

        <ImageView android:layout_width="250dp"
                   android:layout_height="250dp"
                   android:id="@+id/recognition_image_view"
                   android:layout_marginTop="20dp"
                   app:srcCompat="@mipmap/ic_camera"
                   android:layout_gravity="center"/>

        <Button android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Text Recognition"
                android:id="@+id/start_recognition_button"
                android:layout_gravity="center"
                android:backgroundTintMode="screen"/>


        <TextView
                  android:layout_marginTop="10dp"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center"
                  android:text="RESULT"
                  android:backgroundTintMode="screen"/>

        <TextView
                android:background="@drawable/stroke_layout"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:layout_width="320dp"
                android:layout_height="270dp"
                android:id="@+id/result_text_view"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>